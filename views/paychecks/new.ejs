<%- include('../partials/header') %>

<section id="new-paycheck">
  <h2>Add New Paycheck</h2>
  <form action="/paychecks" method="POST">
    <label for="memo">Memo:</label>
    <input type="text" id="memo" name="memo" required><br><br>
    
    <label for="amount">Amount:</label>
    <input type="number" id="amount" name="amount" min="0" step="0.01" required><br><br>
    
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required><br><br>
    
    <button type="submit">Add Paycheck</button>
  </form>
</section>

<%- include('../partials/footer') %>
